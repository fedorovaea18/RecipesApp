<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/main_space_half_8"
    android:layout_marginVertical="@dimen/main_space_half_8"
    android:background="@color/white_color"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/corner_radius_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImageRecipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100"
            android:contentDescription="@string/image_description_recipe"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitleRecipeName"
            style="@style/StyleTitleCategories14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_space_half_8"
            tools:text="Название рецепта" />

    </LinearLayout>

</androidx.cardview.widget.CardView>